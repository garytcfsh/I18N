<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="OnLoaded">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="4*"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition />
        <RowDefinition />
        <RowDefinition />
      </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Flow:"/>
        <Label Grid.Row="0" Grid.Column="1" Content="Modify I18N.xlsx -> copy to google sheet -> save as tsv"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Source File: "/>
        <Label Grid.Row="1" Grid.Column="1" x:Name="srcFilePath"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Status: "/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="statusLabel" />
    </Grid>
</Window>
